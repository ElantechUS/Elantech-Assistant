{
  "name": "elantech-assistant",
  "author": "Giuseppe Barbieri",
  "version": "0.1.0",
  "private": true,
  "homepage": "./",
  "main": "build/electron/electron/main.js",
  "type": "module",
  "scripts": {
    "build": "react-scripts build",
    "eject": "react-scripts eject",
    "lint": "eslint ./src --ext \".js,.jsx,.ts,.tsx\" && stylelint \"./src/**/*.css\"",
    "lint:fix": "eslint ./src --ext \".js,.jsx,.ts,.tsx\" --fix && stylelint \"./src/**/*.css\" --fix",
    "start": "ts-node electron/connect-electron.js",
    "test": "react-scripts test",
    "build-electron": "tsc --project electron/tsconfig.json",
    "start-electron": "ts-node --skip-project electron/connect-electron.js",
    "watch-electron": "tsc --watch --project electron/tsconfig.json",
    "start-react": "cross-env BROWSER=none react-scripts start",
    "dist": "npm run build && npm run build-electron && electron-builder build -c.extraMetadata.main=build/electron/electron/main.js"
  },
  "dependencies": {
    "@emotion/react": "^11.13.3",
    "@emotion/styled": "^11.13.0",
    "@popperjs/core": "^2.11.8",
    "@types/react-bootstrap-table2-filter": "^1.3.8",
    "@types/react-bootstrap-table2-toolkit": "^2.1.13",
    "axios": "^1.7.7",
    "bootstrap": "^5.3.3",
    "classnames": "^2.5.1",
    "eslint": "^9.14.0",
    "localforage": "^1.9.0",
    "moment": "^2.30.1",
    "open": "^10.1.0",
    "prop-types": "^15.0.0",
    "react": "^18.3.1",
    "react-bootstrap": "^2.10.5",
    "react-bootstrap-icons": "^1.11.4",
    "react-bootstrap-table-next": "^4.0.3",
    "react-bootstrap-table2-filter": "^1.3.3",
    "react-bootstrap-table2-overlay": "^2.0.0",
    "react-bootstrap-table2-paginator": "^2.1.2",
    "react-bootstrap-table2-toolkit": "^2.1.3",
    "react-debounce-input": "^3.2.5",
    "react-dom": "^18.3.1",
    "react-error-overlay": "6.0.11",
    "react-perfect-scrollbar": "^1.5.8",
    "react-router-dom": "^6.28.0",
    "react-scripts": "5.0.1",
    "react-sliding-pane": "^7.0.0",
    "react-stack-grid": "^0.7.1",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@types/axios": "^0.14.4",
    "@types/classnames": "^2.3.4",
    "@types/electron-store": "^3.2.2",
    "@types/jest": "^29.5.14",
    "@types/node": "22.9.0",
    "@types/react": "^18.3.12",
    "@types/react-bootstrap-table-next": "^4.0.26",
    "@types/react-bootstrap-table2-paginator": "^2.1.2",
    "@types/react-dom": "^18.3.1",
    "@types/react-router-dom": "^5.1.5",
    "@typescript-eslint/eslint-plugin": "^8.13.0",
    "@typescript-eslint/parser": "^8.13.0",
    "cross-env": "^7.0.2",
    "depcheck": "^1.4.7",
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8",
    "eslint-plugin-react": "^7.37.2",
    "foreman": "^3.0.1",
    "nodemon": "^3.1.7",
    "stylelint": "^16.10.0",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-order": "^6.0.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  },
  "resolutions": {
    "@types/react": "18.3.12",
    "react-error-overlay": "6.0.11"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "build": {
    "appId": "com.electron.elantech-assistant",
    "directories": {
      "buildResources": "public"
    }
  },
  "license": "MIT"
}
